<!DOCTYPE html>
<html>
  <head>
    <title>Cs3300</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-primary">
      <a class="navbar-brand">Student Project Porfolio</a>
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item active">
          <a class="nav-link" href="/projects">Home<span class="sr-only">(current)</span></a>
        </li>
      </ul>
      <% if user_signed_in? %>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
      <% else %>
        <button onclick="window.location.href='/users/sign_in';">Sign in</button>
        <button onclick="window.location.href='/users/sign_up';">Sign up</button>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
